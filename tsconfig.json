{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist", 
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./src", 
    "sourceMap": true, 
    "moduleDetection": "auto",
    "moduleResolution": "nodenext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}