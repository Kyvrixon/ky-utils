{
  "compilerOptions": {
    "target": "es6", // Set the JavaScript language version for the emitted JavaScript (ES6 is a good modern choice)
    "module": "NodeNext", // Use ECMAScript modules
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files (faster compilation)
    "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent across imports
    "outDir": "./dist", // Redirects output structure to the 'dist' directory
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./src", // Specifies the root directory of input files
    "sourceMap": true, // Generates corresponding '.map' files for debugging
    "moduleDetection": "auto",
    "moduleResolution": "nodenext"
  },
  "include": [
    "src"
  ], // Include the 'src' directory in the compilation
  "exclude": [
    "node_modules"
  ] // Exclude the 'node_modules' directory from the compilation
}